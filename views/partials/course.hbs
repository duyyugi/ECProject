<div class="card text-center card-product" >
    <div class="header_card card-product__img">
        <img class="card-img font_imgcategory" src="{{imagePath}}" alt="">
        <ul class="card-product__imgOverlay">
            <li><button onclick="location.href='/category/{{courseID}}'"><i class="ti-search"></i></button></li>
            <li><button class="add-to-cart" data-id="{{courseID}}"><i class="ti-shopping-cart"></i></button></li>
            <li><button><i class="ti-heart"></i></button></li>
        </ul>
    </div>
    <div class="card-body">
        <p>{{Category.name}}</p>
        <h4 class="card-product__title"><a href="/category/{{courseID}}">{{name}}</a></h4>
        <p  class="money card-product__price dis-price">{{priceDis}}</p>
        <p class="card-product__price dis-price" >VNĐ</p>
        <br>
        <p class="money card-product__price" style="display:inline">{{price}}</p>
        <p class="card-product__price" style="display:inline">VNĐ</p>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.0.slim.js"></script>
<script src="/js/simple.money.format.js"></script>
<script type="text/javascript">
    $('.money').simpleMoneyFormat();
</script>