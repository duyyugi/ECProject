<!DOCTYPE html>
<html lang="en">

<body>
    <!-- ================ category section start ================= -->
    <section class="blog_area single-post-area py-80px section-margin--small">
        <div class="container">
            <div class="row">
                {{>nav_teacher}}
                <div class="col-lg-9">
                    <div class="col-xl-12 col-lg-8 col-md-7">
                        <!-- Start Filter Bar -->
                        <div class="filter-bar d-flex flex-wrap align-items-center">
                            <div class="sorting mr-auto">
                                <div>
                                    <a class="btn btn-primary"
                                        href="/teacher/insert_teacher_lession?courseID={{courseID}}"><i
                                            class="fa fa-plus"></i>Thêm lession mới</a>
                                </div>
                            </div>
                            <div>
                                <div class="input-group filter-bar-search">
                                    <!--<input type="text" name="searchCourse" id="searchCourse"
                                                                    placeholder="Tìm kiếm theo tên">
                                                                <button type="submit" onclick="searchCourse()" class="button_submit"><i
                                                                        class="ti-search button_search ion_search"></i></button>-->
                                    <input type="text" class="form-control" id="searchCourse" onkeyup="SearchCourse()"
                                        placeholder="Tìm kiếm theo tên" title="Type in a name">
                                </div>
                            </div>
                        </div>

                        <form action="#" method="POST">
                            <table id="mytablecourse" class="table">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">STT</th>
                                        <th scope="col">LessionID</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">LessionNo</th>
                                        <th scope="col">Option</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each lessions}}
                                    <tr>
                                        <td class="counterCell"></td>
                                        <td>{{lessonID}}</td>
                                        <td>{{name}}</td>
                                        <td>{{lessonNo}}</td>
                                        <td>
                                            <a href="/teacher/update_teacher_lession?lessonID={{lessonID}}"><i
                                                    class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                                            <a href="/teacher/delete_teacher_lession?lessonID={{lessonID}}&courseID={{courseID}}"
                                                onclick="return confirm('Are you sure to delete this lession ?');"><i
                                                    class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </form>

                        <nav>
                            <ul class="pagination">
                                <li class="page-item">
                                    <a class="page-link" href="?page={{prev_value}}&searchUser={{searchCourse}}">
                                        <i class="fa fa-backward" aria-hidden="true"></i>
                                    </a>
                                </li>
                                {{#each this.page_numbers}}
                                {{#if isCurrentPage}}
                                <li class="page-item active" aria-current="page">
                                    <a class="page-link" href="javascript:;">{{value}} <span
                                            class="sr-only">(current)</span></a>
                                </li>
                                {{else}}
                                <li class="page-item">
                                    <a class="page-link" href="?page={{value}}">{{value}}</a>
                                </li>
                                {{/if}}
                                {{/each}}
                                <li class="page-item">
                                    <a class="page-link" href="?page={{next_value}}&searchUser={{searchCourse}}">
                                        <i class="fa fa-forward" aria-hidden="true"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
        function bannedListChange(obj) {
            let url = '/admin?page=1&banned=' + obj.value;
            location.href = url;
        }
        function SearchCourse() {
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("searchCourse");
            filter = input.value.toUpperCase();
            table = document.getElementById("mytablecourse");
            tr = table.getElementsByTagName("tr");
            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[1];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }
    </script>

</html>